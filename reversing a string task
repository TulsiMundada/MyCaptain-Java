import java.util.Scanner;
public class Test {
public static void main(String args[]) {
String a;
String rev="";
System.out.println("enter a string: ");
Scanner sc=new Scanner(System.in);
a= sc.nextLine();
int len = a.length();
for (int i=len-1; i>=0; i--)
rev=rev+a.charAt(i);
System.out.println("the reverse string is "+rev);
}
}
